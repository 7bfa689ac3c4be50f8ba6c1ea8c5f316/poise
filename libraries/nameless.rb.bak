module Poise
  module Resource
    module Nameless

      def initialize(*args)
        name = args.find {|arg| arg.is_a?(String)}
        run_context = args.find {|arg| arg.is_a?(Chef::RunContext)}
        super(name, run_context)
      end

      def parent(arg=nil)
        parent = super
        if !name && parent
          @name = "#{parent.name}::#{resource_name}"
        end
        parent
      end

    end
  end
end
